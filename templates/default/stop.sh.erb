#!/bin/bash
set -e
PID_FILE=<%= node.delabootstrap.pid_file %>

function kill_named {
    PID=`ps aux | grep -i delabootstrap | grep -v grep | grep -v stop | awk 'NR==1{print $2}'`
    if [ "$PID" != "" ] ; then
	   kill -9 $PID > /dev/null 2>&1 
       res=$?
    else
	   res=0
    fi
    return $res
}

res=1

if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 if ps -p $PID > /dev/null
 then
   kill $PID > /dev/null 2>&1
   res=$?
  fi
fi

if [ $res -ne 0 ] ; then
    kill_named
fi

rm -f ${PID_FILE}

if [ $res -eq 0 ] ; then
    echo "Killed delabootstrap"
else
    echo "Could not find delabootstrap process to kill"
fi

exit $res